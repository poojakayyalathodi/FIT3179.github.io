{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 500,
  "height": 300,
  "title": {
    "text":"Microplastics in Ocean",
    "fontSize": 16,
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {"name": "hover_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/poojakayyalathodi/pkay0002.github.io/master/data/microplastics-in-ocean.csv",
      "format": {"type": "csv", "parse": {"Year": "date"}, "delimiter": ","}
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "pivot",
          "field": "Emission trend",
          "value": "Microplastics",
          "groupby": ["Year"]
        },
        {"type": "formula", "expr": "toDate(datum[\"Year\"])", "as": "Year"},
        {
          "type": "filter",
          "expr": "(isDate(datum[\"Year\"]) || (isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"])))"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"Year\"]) || (isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"])))"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"Year\"]) || (isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"])))"
        }
      ]
    },
    {
      "name": "data_3",
      "source": "source_0",
      "transform": [
        {"type": "filter", "expr": "(vlSelectionTest(\"hover_store\", datum))"},
        {
          "type": "filter",
          "expr": "(isDate(datum[\"Year\"]) || (isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]))) && isValid(datum[\"Emission trend\"]) && isFinite(+datum[\"Emission trend\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "hover",
      "update": "vlSelectionResolve(\"hover_store\", \"union\")"
    },
    {
      "name": "hover_tuple",
      "on": [
        {
          "events": [
            {
              "source": "scope",
              "type": "mouseover",
              "markname": "layer_1_voronoi"
            }
          ],
          "update": "datum && item().mark.marktype !== 'group' ? {unit: \"layer_1\", fields: hover_tuple_fields, values: [(item().isVoronoi ? datum.datum : datum)[\"Year\"]]} : null",
          "force": true
        },
        {"events": [{"source": "scope", "type": "mouseout"}], "update": "null"}
      ]
    },
    {"name": "hover_tuple_fields", "value": [{"type": "E", "field": "Year"}]},
    {
      "name": "hover_modify",
      "on": [
        {
          "events": {"signal": "hover_tuple"},
          "update": "modify(\"hover_store\", hover_tuple, true)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_layer_0_main",
          "data": "source_0",
          "groupby": ["Emission trend", "Predicted"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"Year\"]"},
          "interactive": false,
          "from": {"data": "faceted_path_layer_0_layer_0_main"},
          "encode": {
            "update": {
              "stroke": {"scale": "color", "field": "Emission trend"},
              "strokeDash": {"scale": "strokeDash", "field": "Predicted"},
              "description": {
                "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y')) + \"; Emission trend: \" + (isValid(datum[\"Emission trend\"]) ? datum[\"Emission trend\"] : \"\"+datum[\"Emission trend\"]) + \"; Microplastics(tonnes): \" + (format(datum[\"Microplastics\"], \"\")) + \"; Forecast: \" + (isValid(datum[\"Predicted\"]) ? datum[\"Predicted\"] : \"\"+datum[\"Predicted\"])"
              },
              "x": {"scale": "x", "field": "Year"},
              "y": {"scale": "y", "field": "Microplastics"},
              "defined": {
                "signal": "isValid(datum[\"Year\"]) && isFinite(+datum[\"Year\"]) && isValid(datum[\"Microplastics\"]) && isFinite(+datum[\"Microplastics\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_0_layer_1_marks",
      "type": "symbol",
      "style": ["point"],
      "interactive": false,
      "from": {"data": "data_3"},
      "encode": {
        "update": {
          "opacity": {"value": 0.3},
          "fill": {"value": "transparent"},
          "stroke": {"scale": "color", "field": "Emission trend"},
          "strokeDash": {"scale": "strokeDash", "field": "Predicted"},
          "ariaRoleDescription": {"value": "point"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y')) + \"; Emission trend: \" + (isValid(datum[\"Emission trend\"]) ? datum[\"Emission trend\"] : \"\"+datum[\"Emission trend\"]) + \"; Microplastics (tonnes): \" + (format(datum[\"Microplastics\"], \"\")) + \"; Forecast: \" + (isValid(datum[\"Predicted\"]) ? datum[\"Predicted\"] : \"\"+datum[\"Predicted\"])"
          },
          "x": {"scale": "x", "field": "Year"},
          "y": {"scale": "y", "field": "Microplastics"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "rule",
      "style": ["rule"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": {"value": "black"},
          "opacity": [
            {"test": "(vlSelectionTest(\"hover_store\", datum))", "value": 3},
            {"value": 0}
          ],
          "tooltip": {
            "signal": "{\"Emissions growth to 2050\": format(datum[\"Emissions growth to 2050\"], \"\"), \"Emissions level to 2020\": format(datum[\"Emissions level to 2020\"], \"\"), \"Emissions stop in 2020\": format(datum[\"Emissions stop in 2020\"], \"\")}"
          },
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y')) + \"; Emissions growth to 2050: \" + (format(datum[\"Emissions growth to 2050\"], \"\")) + \"; Emissions level to 2020: \" + (format(datum[\"Emissions level to 2020\"], \"\")) + \"; Emissions stop in 2020: \" + (format(datum[\"Emissions stop in 2020\"], \"\"))"
          },
          "x": {"scale": "x", "field": "Year"},
          "y": {"value": 0},
          "y2": {"field": {"group": "height"}}
        }
      }
    },
    {
      "name": "layer_1_voronoi",
      "type": "path",
      "interactive": true,
      "from": {"data": "layer_1_marks"},
      "encode": {
        "update": {
          "fill": {"value": "transparent"},
          "strokeWidth": {"value": 0.35},
          "stroke": {"value": "transparent"},
          "isVoronoi": {"value": true},
          "tooltip": {
            "signal": "{\"Emissions growth to 2050\": format(datum.datum[\"Emissions growth to 2050\"], \"\"), \"Emissions level to 2020\": format(datum.datum[\"Emissions level to 2020\"], \"\"), \"Emissions stop in 2020\": format(datum.datum[\"Emissions stop in 2020\"], \"\")}"
          }
        }
      },
      "transform": [
        {
          "type": "voronoi",
          "x": {"expr": "datum.datum.x || 0"},
          "y": {"expr": "datum.datum.y || 0"},
          "size": [{"signal": "width"}, {"signal": "height"}]
        }
      ]
    },
    {
      "name": "layer_2_layer_0_marks",
      "type": "rule",
      "style": ["rule"],
      "interactive": false,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "strokeDash": {"value": [6, 9]},
          "dx": {"value": 8},
          "dy": {"value": -62},
          "stroke": {"value": "grey"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y'))"
          },
          "x": {"scale": "x", "signal": "datetime(2020, 0, 1, 0, 0, 0, 0)"},
          "y": {"value": 0},
          "y2": {"field": {"group": "height"}},
          "strokeWidth": {"value": 2}
        }
      }
    },
    {
      "name": "layer_3_layer_0_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": {"value": "Forecast based on emission trends"},
          "dx": {"value": -198},
          "dy": {"value": 64},
          "fill": {"value": "grey"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y'))"
          },
          "x": {"scale": "x", "signal": "datetime(2015, 0, 1, 0, 0, 0, 0)"},
          "y": {"signal": "height", "mult": 0.5},
          "fontSize": {"value": 14}
        }
      }
    },
    {
      "name": "layer_4_layer_0_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": {"value": "Emissions stop in 2020"},
          "dx": {"value": 4},
          "dy": {"value": -6},
          "fontSize": {"value": 14},
          "fill": {"value": "firebrick"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y'))"
          },
          "x": {"scale": "x", "signal": "datetime(2050, 0, 1, 0, 0, 0, 0)"},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    },
    {
      "name": "layer_5_layer_0_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": {"value": "Emissions level to 2020"},
          "dx": {"value": 4},
          "dy": {"value": -86},
          "fontSize": {"value": 14},
          "fill": {"value": "darkorange"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y'))"
          },
          "x": {"scale": "x", "signal": "datetime(2050, 0, 1, 0, 0, 0, 0)"},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    },
    {
      "name": "layer_6_layer_0_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "baseline": {"value": "bottom"},
          "text": {"value": "Emissions growth to 2050"},
          "dx": {"value": 4},
          "dy": {"value": -132},
          "fontSize": {"value": 14},
          "fontStyle": {"value": "Rubik"},
          "fill": {"value": "#4682b4"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"Year\"], '%b %d, %Y'))"
          },
          "x": {"scale": "x", "signal": "datetime(2050, 0, 1, 0, 0, 0, 0)"},
          "y": {"signal": "height", "mult": 0.5}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "Year"},
          {"data": "data_3", "field": "Year"},
          {"data": "data_0", "field": "Year"},
          {"signal": "{data: datetime(2015, 0, 1, 0, 0, 0, 0)}"},
          {"signal": "{data: datetime(2050, 0, 1, 0, 0, 0, 0)}"}
        ]
      },
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "Microplastics"},
          {"data": "data_3", "field": "Microplastics"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "Emission trend"},
          {"data": "data_3", "field": "Emission trend"}
        ],
        "sort": true
      },
      "range": "category"
    },
    {
      "name": "strokeDash",
      "type": "ordinal",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "Predicted"},
          {"data": "data_3", "field": "Predicted"}
        ],
        "sort": true
      },
      "range": [[1, 0], [4, 2], [2, 1], [1, 1], [1, 2, 4, 2]]
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "titleFontStyle": "Rubik",
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "titleFontStyle": "Rubik",
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "titleFontStyle": "Rubik",
      "titleFontSize": 14,
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Microplastics(tonnes)",
      "titleFontStyle": "Rubik",
      "titleFontSize": 14,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "config": {}
}
