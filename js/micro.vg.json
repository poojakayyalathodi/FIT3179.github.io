{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Micropplastics(>0.5cm) in Oceans",
  "autosize": {"type": "fit-x", "contains": "padding"},
  "background": "white",
  "padding": 5,
  "height": 200,
  "style": "cell",
  "data": [
    {
      "name": "hover_store",
      "values": [
        {
          "unit": "layer_0",
          "fields": [{"type": "E", "field": "Emissions"}],
          "values": ["Emissions growth to 2050"]
        }
      ]
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/poojakayyalathodi/pkay0002.github.io/master/data/microplastics-in-ocean.csv",
      "format": {
        "type": "csv",
        "parse": {"Year": "date", "date": "date"},
        "delimiter": ","
      },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Emissions!=='Emissions growth to 2080'"
        },
        {
          "field": "date",
          "type": "timeunit",
          "units": ["year"],
          "as": ["year_date", "year_date_end"]
        },
        {
          "field": "Year",
          "type": "timeunit",
          "units": ["year"],
          "as": ["year_Year", "year_Year_end"]
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(isDate(datum[\"year_date\"]) || (isValid(datum[\"year_date\"]) && isFinite(+datum[\"year_date\"]))) && isValid(datum[\"Microplastics\"]) && isFinite(+datum[\"Microplastics\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "width",
      "init": "isFinite(containerSize()[0]) ? containerSize()[0] : 200",
      "on": [
        {
          "update": "isFinite(containerSize()[0]) ? containerSize()[0] : 200",
          "events": "window:resize"
        }
      ]
    },
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "hover",
      "update": "vlSelectionResolve(\"hover_store\", \"union\")"
    },
    {
      "name": "hover_tuple",
      "on": [
        {
          "events": [{"source": "scope", "type": "mouseover"}],
          "update": "datum && item().mark.marktype !== 'group' ? {unit: \"layer_0\", fields: hover_tuple_fields, values: [(item().isVoronoi ? datum.datum : datum)[\"Emissions\"]]} : null",
          "force": true
        },
        {"events": [{"source": "scope", "type": "dblclick"}], "update": "null"}
      ]
    },
    {
      "name": "hover_tuple_fields",
      "value": [{"type": "E", "field": "Emissions"}]
    },
    {
      "name": "hover_modify",
      "on": [
        {
          "events": {"signal": "hover_tuple"},
          "update": "modify(\"hover_store\", hover_tuple, true)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": ["Emissions"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"year_Year\"]"},
          "interactive": true,
          "from": {"data": "faceted_path_layer_0_main"},
          "encode": {
            "update": {
              "stroke": {"value": "transparent"},
              "strokeWidth": {"value": 8},
              "opacity": [
                {
                  "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
                  "value": 1
                },
                {"value": 0.2}
              ],
              "tooltip": {
                "signal": "{\"Microplastics\": format(datum[\"Microplastics\"], \"\"), \"Year\": timeFormat(datum[\"Year\"], '%b %d, %Y'), \"Emissions\": isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"]}"
              },
              "description": {
                "signal": "\"Year: \" + (timeFormat(datum[\"year_Year\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Macroplastics (>0.5cm): \" + (format(datum[\"Microplastics\"], \"\")) + \"; Microplastics: \" + (format(datum[\"Microplastics\"], \"\")) + \"; Emissions: \" + (isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"])"
              },
              "x": {"scale": "x", "field": "year_Year"},
              "y": {"scale": "y", "field": "Microplastics"},
              "defined": {
                "signal": "isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]) && isValid(datum[\"Microplastics\"]) && isFinite(+datum[\"Microplastics\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_1_main",
          "data": "source_0",
          "groupby": ["Emissions"]
        }
      },
      "encode": {
        "update": {
          "width": {"field": {"group": "width"}},
          "height": {"field": {"group": "height"}}
        }
      },
      "marks": [
        {
          "name": "layer_1_marks",
          "type": "line",
          "style": ["line"],
          "sort": {"field": "datum[\"year_Year\"]"},
          "interactive": true,
          "from": {"data": "faceted_path_layer_1_main"},
          "encode": {
            "update": {
              "stroke": [
                {
                  "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
                  "scale": "color",
                  "field": "Emissions"
                },
                {"value": "grey"}
              ],
              "opacity": [
                {
                  "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
                  "value": 1
                },
                {"value": 0.2}
              ],
              "tooltip": {
                "signal": "{\"Microplastics\": format(datum[\"Microplastics\"], \"\"), \"Year\": timeFormat(datum[\"Year\"], '%b %d, %Y'), \"Emissions\": isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"]}"
              },
              "description": {
                "signal": "\"Year: \" + (timeFormat(datum[\"year_Year\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Macroplastics (>0.5cm): \" + (format(datum[\"Microplastics\"], \"\")) + \"; Microplastics: \" + (format(datum[\"Microplastics\"], \"\")) + \"; Emissions: \" + (isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"])"
              },
              "x": {"scale": "x", "field": "year_Year"},
              "y": {"scale": "y", "field": "Microplastics"},
              "defined": {
                "signal": "isValid(datum[\"year_Year\"]) && isFinite(+datum[\"year_Year\"]) && isValid(datum[\"Microplastics\"]) && isFinite(+datum[\"Microplastics\"])"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_2_layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "opacity": [
            {
              "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
              "value": 1
            },
            {"value": 0.2}
          ],
          "fill": [
            {
              "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
              "scale": "color",
              "field": "Emissions"
            },
            {"value": "grey"}
          ],
          "tooltip": {"signal": "format(datum[\"Microplastics\"], \"\")"},
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"year_date\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Macroplastics (>0.5cm): \" + (format(datum[\"Microplastics\"], \"\")) + \"; Microplastics: \" + (format(datum[\"Microplastics\"], \"\")) + \"; Emissions: \" + (isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"])"
          },
          "x": {"scale": "x", "field": "year_date"},
          "y": {"scale": "y", "field": "Microplastics"},
          "shape": {"value": "circle"}
        }
      }
    },
    {
      "name": "layer_2_layer_1_marks",
      "type": "text",
      "style": ["text"],
      "interactive": true,
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "dx": {"value": 4},
          "fill": [
            {
              "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
              "scale": "color",
              "field": "Emissions"
            },
            {"value": "grey"}
          ],
          "opacity": [
            {
              "test": "!(length(data(\"hover_store\"))) || (vlSelectionTest(\"hover_store\", datum))",
              "value": 1
            },
            {"value": 0.2}
          ],
          "tooltip": {"signal": "format(datum[\"Microplastics\"], \"\")"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"year_date\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Macroplastics (>0.5cm): \" + (format(datum[\"Microplastics\"], \"\")) + \"; Microplastics: \" + (format(datum[\"Microplastics\"], \"\")) + \"; Emissions: \" + (isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"])"
          },
          "x": {"scale": "x", "field": "year_date"},
          "y": {"scale": "y", "field": "Microplastics"},
          "text": {
            "signal": "isValid(datum[\"Emissions\"]) ? datum[\"Emissions\"] : \"\"+datum[\"Emissions\"]"
          },
          "baseline": {"value": "middle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "year_Year"},
          {"data": "data_0", "field": "year_date"}
        ]
      },
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "Microplastics"},
          {"data": "data_0", "field": "Microplastics"}
        ]
      },
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {
        "fields": [
          {"data": "source_0", "field": "Emissions"},
          {"data": "data_0", "field": "Emissions"}
        ],
        "sort": true
      },
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "format": {
        "signal": "timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"})"
      },
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Macroplastics (>0.5cm)",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "title": "Emissions",
      "stroke": "color",
      "symbolType": "circle",
      "encode": {"symbols": {"update": {"opacity": {"value": 1}}}},
      "fill": "color"
    }
  ],
  "config": {"style": {"cell": {"stroke": null}}}
}