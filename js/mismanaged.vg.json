{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",

  "width": 380,
  "height": 180,
  "style": "cell",
  "data": [
    {"name": "continent_highlight_store"},
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/poojakayyalathodi/pkay0002.github.io/master/data/per-capita%20mismanaged-vs-gdp.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "filter",
          "expr": "Continent_selection == null || datum.Continent == Continent_selection"
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"GDP_per_capita\"]) && isFinite(+datum[\"GDP_per_capita\"]) && isValid(datum[\"Per_capita_mismanaged_plastic_waste\"]) && isFinite(+datum[\"Per_capita_mismanaged_plastic_waste\"]) && isValid(datum[\"Total_population\"]) && isFinite(+datum[\"Total_population\"])"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "continent_highlight_Continent_legend",
      "value": null,
      "on": [
        {
          "events": [
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_symbols"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_labels"
            },
            {
              "source": "view",
              "type": "click",
              "markname": "Continent_legend_entries"
            }
          ],
          "update": "datum.value || item().items[0].items[0].datum.value",
          "force": true
        },
        {
          "events": [{"source": "view", "type": "click"}],
          "update": "!event.item || !datum ? null : continent_highlight_Continent_legend",
          "force": true
        }
      ]
    },
    {
      "name": "continent_highlight",
      "update": "vlSelectionResolve(\"continent_highlight_store\", \"union\", true)"
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    },
    {
      "name": "continent_highlight_tuple",
      "update": "continent_highlight_Continent_legend !== null ? {fields: continent_highlight_tuple_fields, values: [continent_highlight_Continent_legend]} : null"
    },
    {
      "name": "continent_highlight_tuple_fields",
      "value": [{"type": "E", "field": "Continent"}]
    },
    {
      "name": "continent_highlight_toggle",
      "value": false,
      "on": [
        {
          "events": {"merge": [{"source": "view", "type": "click"}]},
          "update": "event.shiftKey"
        }
      ]
    },
    {
      "name": "continent_highlight_modify",
      "on": [
        {
          "events": {"signal": "continent_highlight_tuple"},
          "update": "modify(\"continent_highlight_store\", continent_highlight_toggle ? null : continent_highlight_tuple, continent_highlight_toggle ? null : true, continent_highlight_toggle ? continent_highlight_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "symbol",
      "style": ["circle"],
      "interactive": true,
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "opacity": [
            {
              "test": "!(length(data(\"continent_highlight_store\"))) || (vlSelectionTest(\"continent_highlight_store\", datum))",
              "value": 0.6
            },
            {"value": 0.2}
          ],
          "fill": {"scale": "color", "field": "Continent"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"], \"GDP per Capita\": format(datum[\"GDP_per_capita\"], \"0.2f\"), \"Mismanaged Plastic Waste per Capita\": format(datum[\"Per_capita_mismanaged_plastic_waste\"], \",\")}"
          },
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"GDP per capita: \" + (format(datum[\"GDP_per_capita\"], \"\")) + \"; Mismanaged Plastic Waste per capita: \" + (format(datum[\"Per_capita_mismanaged_plastic_waste\"], \"\")) + \"; Continent: \" + (isValid(datum[\"Continent\"]) ? datum[\"Continent\"] : \"\"+datum[\"Continent\"]) + \"; Total_population: \" + (format(datum[\"Total_population\"], \"\")) + \"; Country: \" + (isValid(datum[\"Country\"]) ? datum[\"Country\"] : \"\"+datum[\"Country\"]) + \"; GDP per Capita: \" + (format(datum[\"GDP_per_capita\"], \"0.2f\")) + \"; Mismanaged Plastic Waste per Capita: \" + (format(datum[\"Per_capita_mismanaged_plastic_waste\"], \",\"))"
          },
          "x": {"scale": "x", "field": "GDP_per_capita"},
          "y": {"scale": "y", "field": "Per_capita_mismanaged_plastic_waste"},
          "size": {"scale": "size", "field": "Total_population"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": [0, 80000],
      "range": [0, {"signal": "width"}],
      "nice": true,
      "zero": true
    },
    {
      "name": "y",
      "type": "linear",
      "domain": [0, 0.17],
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "North America",
        "South America",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "range": [
        "#e41a1c",
        "#984ea3",
        "#ff7f00",
        "#a6cee3",
        "#377eb8",
        "#a65628"
      ]
    },
    {
      "name": "size",
      "type": "linear",
      "domain": {"data": "source_0", "field": "Total_population"},
      "range": [0, 361],
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "GDP per capita",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Mismanaged Plastic Waste per capita",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {
      "fill": "color",
      "symbolType": "circle",
      "title": "Continent",
      "encode": {
        "labels": {
          "name": "Continent_legend_labels",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"continent_highlight_store\")) || (continent_highlight[\"Continent\"] && indexof(continent_highlight[\"Continent\"], datum.value) >= 0))",
                "value": 1
              },
              {"value": 0.35}
            ]
          }
        },
        "symbols": {
          "name": "Continent_legend_symbols",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "(!length(data(\"continent_highlight_store\")) || (continent_highlight[\"Continent\"] && indexof(continent_highlight[\"Continent\"], datum.value) >= 0))",
                "value": 0.6
              },
              {"value": 0.35}
            ]
          }
        },
        "entries": {
          "name": "Continent_legend_entries",
          "interactive": true,
          "update": {"fill": {"value": "transparent"}}
        }
      }
    },
    {
      "size": "size",
      "symbolType": "circle",
      "title": "Total_population",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.6},
            "opacity": {"value": 0.6},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}
